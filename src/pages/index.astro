---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Hey there</h1>
		<a href="/about/">Check this out</a>
		<a href="/blog/">Dont Check this out</a>
	</main>
</Layout>

<style>
	body {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		display: flex;
		justify-content: center;
		flex-direction: column;
		align-items: center;
	}
	h1 {
		color: white;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(
			rgba(var(--accent-dark), 66%),
			rgba(var(--accent-dark), 33%)
		);
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	a {
		color: #ffffff; /* White color */
		text-decoration: none; /* Remove underline */
		font-weight: bold; /* Make the text bold */
		background-color: #c3c3c3; /* Add a background color */
		padding: 10px 20px; /* Add padding */
		border-radius: 5px; /* Rounded corners */
		text-align: center; 
		transition:
			background-color 0.3s,
			color 0.3s; /* Smooth transition for hover effect */
		margin: 10px 0px;
	}

	a:hover {
		background-color: #45a049; /* Slightly darker green on hover */
		color: #e0e0e0; /* Slightly grayish white on hover */
	}

	a:active {
		background-color: #3e8e41; /* Even darker green on click */
		color: #d4d4d4; /* Slightly darker grayish white on click */
	}

	a:visited {
		color: #ffffff; /* Ensure visited links remain white */
	}
</style>
