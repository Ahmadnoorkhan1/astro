import Layout from "../layouts/Layout.astro";
const myWholePageInJSON = {
    pageTitle: "About Me",
    introduction:
        "Hello! I'm a passionate Fullstack JavaScript Developer with a strong background in building dynamic and responsive web applications. My expertise spans across both frontend and backend technologies, enabling me to create seamless and efficient user experiences.",
    sections: [
        {
            heading: "Frontend Development",
            content:
                "I specialize in crafting intuitive and engaging interfaces using modern frameworks like React, Angular, and Vue.js. My focus is on writing clean, modular, and maintainable code while ensuring the best performance and user experience.",
        },
        {
            heading: "Backend Development",
            content:
                "On the server side, I am proficient with Node.js and Express, developing robust and scalable APIs. My experience includes working with databases such as MongoDB, MySQL, and PostgreSQL, as well as integrating various third-party services and APIs.",
        },
        {
            heading: "Fullstack Projects",
            content:
                "Having worked on numerous projects, I have a comprehensive understanding of the full software development lifecycle. From ideation and design to deployment and maintenance, I strive to deliver high-quality solutions that meet business needs and exceed user expectations.",
        },
        {
            heading: "Technologies & Tools",
            content: [
                {
                    category: "Frontend",
                    items: [
                        "HTML",
                        "CSS",
                        "JavaScript",
                        "TypeScript",
                        "React",
                        "Angular",
                        "Vue.js",
                    ],
                },
                {
                    category: "Backend",
                    items: ["Node.js", "Express", "GraphQL", "RESTful APIs"],
                },
                {
                    category: "Databases",
                    items: ["MongoDB", "MySQL", "PostgreSQL"],
                },
                {
                    category: "DevOps",
                    items: [
                        "Docker",
                        "Kubernetes",
                        "CI/CD pipelines",
                        "AWS",
                        "Azure",
                    ],
                },
                {
                    category: "Others",
                    items: ["Git", "Webpack", "Babel", "Jest", "Cypress"],
                },
            ],
        },
        {
            heading: "Passion & Growth",
            content:
                "I am constantly learning and staying up-to-date with the latest trends and technologies in web development. I enjoy taking on new challenges and collaborating with others to create innovative solutions. My goal is to make the web a better place, one line of code at a time.",
        },
        {
            heading: "Let's Connect",
            content:
                "Feel free to reach out to discuss potential projects, collaborations, or just to chat about tech and development. I'm always open to new opportunities and connections.",
        },
    ],
};
import "../globals.css"
---

<Layout title={myWholePageInJSON.pageTitle}>
    <section>
        <h2>{myWholePageInJSON.pageTitle}</h2>
        <p>
            {myWholePageInJSON.introduction}
        </p>
        {
            myWholePageInJSON.sections.map((mySections) => {
                return (
                    <div >
                        <h3>{mySections.heading}</h3>
                        {Array.isArray(mySections.content) ? (
                            <div class="lists">
                                {mySections.content.map((myContent) => (
                                    <div class="flex-1">
                                        <strong>{myContent.category}</strong>
                                        <ul>
                                            {myContent.items.map((item) => (
                                                <li>{item}</li>
                                            ))}
                                        </ul>
                                    </div>
                                ))}
                            </div>
                        ) : (
                            <div>{mySections.content}</div>
                        )}
                    </div>
                );
            })
        }

